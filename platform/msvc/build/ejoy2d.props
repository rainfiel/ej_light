<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <EJ2DX_PRJ_ROOT>$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), ejoy2d.root))</EJ2DX_PRJ_ROOT>
    <_ROOT_>$(EJ2DX_PRJ_ROOT)\..\..\..\..</_ROOT_>
    <EJ2D_ROOT>$(_ROOT_)\ejoy2d\</EJ2D_ROOT>
    <EJ2D_LUA>$(EJ2D_ROOT)\lua</EJ2D_LUA>
    <EJ2DX_ROOT>$(_ROOT_)\src\clib</EJ2DX_ROOT>
    <EJOY2DX_EXE>$(EJ2DX_PRJ_ROOT)\output\$(Configuration)\</EJOY2DX_EXE>
    <EJOY2DX_OBJ>$(EJ2DX_PRJ_ROOT)\obj\$(Configuration)\$(ProjectName)\</EJOY2DX_OBJ>
    <EJOY2DX_LIB>$(EJ2DX_PRJ_ROOT)\lib\$(Configuration)\</EJOY2DX_LIB>
    <EJ2DX_GLEW>$(_ROOT_)\platform\msvc\src\glew</EJ2DX_GLEW>
    <EJ2DX_INCLUDE>$(_ROOT_)\platform\msvc\include</EJ2DX_INCLUDE>
    <EJ2DX_UTLS>$(EJ2DX_ROOT)\utls</EJ2DX_UTLS>
    <EJ2DX_FRAMEWORK>$(EJ2DX_ROOT)\framework</EJ2DX_FRAMEWORK>
  </PropertyGroup>
  <PropertyGroup>
    <IntDir>$(EJOY2DX_OBJ)</IntDir>
    <OutDir>$(EJOY2DX_LIB)</OutDir>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <WarningLevel>Level3</WarningLevel>
    </ClCompile>
    <Link />
    <ResourceCompile>
      <IgnoreStandardIncludePath>
      </IgnoreStandardIncludePath>
    </ResourceCompile>
    <ResourceCompile>
      <ShowProgress>
      </ShowProgress>
    </ResourceCompile>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="EJ2DX_PRJ_ROOT">
      <Value>$(EJ2DX_PRJ_ROOT)</Value>
    </BuildMacro>
    <BuildMacro Include="EJOY2DX_EXE">
      <Value>$(EJOY2DX_EXE)</Value>
    </BuildMacro>
    <BuildMacro Include="EJ2D_ROOT">
      <Value>$(EJ2D_ROOT)</Value>
    </BuildMacro>
    <BuildMacro Include="EJOY2DX_OBJ">
      <Value>$(EJOY2DX_OBJ)</Value>
    </BuildMacro>
    <BuildMacro Include="EJOY2DX_OBJ">
      <Value>$(EJOY2DX_OBJ)</Value>
    </BuildMacro>
    <BuildMacro Include="EJOY2D_LUA">
      <Value>$(EJOY2D_LUA)</Value>
    </BuildMacro>
    <BuildMacro Include="EJOY2D_GLEW">
      <Value>$(EJOY2D_GLEW)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>
